{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adfcourse-arpit"
		},
		"AzureSqlDatabase1_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'AzureSqlDatabase1'"
		},
		"connection_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'connection'"
		},
		"AzureSqlDatabase1_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "akshitdbserver.database.windows.net"
		},
		"AzureSqlDatabase1_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "1stdatabase"
		},
		"AzureSqlDatabase1_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "admin001"
		},
		"RestService1_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "@{linkedService().country_url}"
		},
		"connection_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://storagedatafactoryarpit.dfs.core.windows.net/"
		},
		"ScheduleTrigger_properties_Create a pipeline to fetch the 5 countries_parameters_country_names": {
			"type": "array",
			"defaultValue": [
				"https://restcountries.com/v3.1/name/india",
				"https://restcountries.com/v3.1/name/us",
				"https://restcountries.com/v3.1/name/china",
				"https://restcountries.com/v3.1/name/uk",
				"https://restcountries.com/v3.1/name/russia"
			]
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "adfcourse-arpit_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureSqlDatabase1_password": {
						"value": "[parameters('AzureSqlDatabase1_password')]"
					},
					"connection_accountKey": {
						"value": "[parameters('connection_accountKey')]"
					},
					"AzureSqlDatabase1_properties_typeProperties_server": {
						"value": "[parameters('AzureSqlDatabase1_properties_typeProperties_server')]"
					},
					"AzureSqlDatabase1_properties_typeProperties_database": {
						"value": "[parameters('AzureSqlDatabase1_properties_typeProperties_database')]"
					},
					"AzureSqlDatabase1_properties_typeProperties_userName": {
						"value": "[parameters('AzureSqlDatabase1_properties_typeProperties_userName')]"
					},
					"RestService1_properties_typeProperties_url": {
						"value": "[parameters('RestService1_properties_typeProperties_url')]"
					},
					"connection_properties_typeProperties_url": {
						"value": "[parameters('connection_properties_typeProperties_url')]"
					},
					"ScheduleTrigger_properties_Create a pipeline to fetch the 5 countries_parameters_country_names": {
						"value": "[parameters('ScheduleTrigger_properties_Create a pipeline to fetch the 5 countries_parameters_country_names')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}