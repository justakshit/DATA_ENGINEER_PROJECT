{
	"name": "transfrom_csv",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "sourceCSV",
						"type": "DatasetReference"
					},
					"name": "sourceCSV"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DelimitedText5",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "selectspecificROWS"
				},
				{
					"name": "filterCUSTOMERID"
				},
				{
					"name": "splitPAYMENTMETHOD"
				},
				{
					"name": "derivedColumn1"
				},
				{
					"name": "aggregatebypayment"
				},
				{
					"name": "alterRow1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          transaction_id as short,",
				"          transactional_date as timestamp,",
				"          product_id as string,",
				"          customer_id as short,",
				"          payment as string,",
				"          credit_card as long,",
				"          loyalty_card as boolean,",
				"          cost as double,",
				"          quantity as short,",
				"          price as double",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceCSV",
				"sourceCSV select(mapColumn(",
				"          transaction_id,",
				"          transactional_date,",
				"          product_id,",
				"          customer_id,",
				"          payment,",
				"          cost,",
				"          quantity,",
				"          price",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectspecificROWS",
				"selectspecificROWS filter(customer_id!=12) ~> filterCUSTOMERID",
				"filterCUSTOMERID split(payment == 'visa',",
				"     disjoint: false) ~> splitPAYMENTMETHOD@(visa, otherPayment)",
				"splitPAYMENTMETHOD@otherPayment derive(payment = coalesce(payment,'N/A')) ~> derivedColumn1",
				"splitPAYMENTMETHOD@visa aggregate(groupBy(customer_id),",
				"     product_id = max(product_id)) ~> aggregatebypayment",
				"aggregatebypayment alterRow(insertIf(1==1)) ~> alterRow1",
				"alterRow1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}